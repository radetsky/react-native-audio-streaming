<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@android:style/TextAppearance.StatusBar.EventContent"
        >
        <ImageView
            android:id="@+id/streaming_icon"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:layout_marginRight="10dp"
        />
        <ImageButton
            android:id="@+id/btn_streaming_notification_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/ic_media_pause"
            android:layout_toRightOf="@+id/streaming_icon"
        />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_streaming_notification_stop"
            android:gravity="center_vertical" >
                <TextView
                    android:id="@+id/album_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:textAlignment="gravity"
                    android:textColor="#000"
                    android:textSize="16dp"
                 />
                <TextView
                    android:id="@+id/song_name_notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:textAlignment="gravity"
                    android:textSize="12dp"
                    android:textColor="#777"
                />
        </LinearLayout>
    </RelativeLayout>
